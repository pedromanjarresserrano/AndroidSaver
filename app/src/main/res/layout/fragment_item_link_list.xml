<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.service.saver.saverservice.links.ItemLinkFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondary_text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.service.saver.saverservice.links.TempLinkFragment"
        tools:listitem="@layout/fragment_item_link">


    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/title_nolinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="511dp"
        android:text="No links"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/list"
        app:layout_constraintEnd_toEndOf="@+id/list"
        app:layout_constraintStart_toStartOf="@+id/list"
        app:layout_constraintTop_toTopOf="@+id/list" />


</androidx.constraintlayout.widget.ConstraintLayout>
